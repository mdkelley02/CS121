public class ModernArt{
        public static void main(String[] args)
                {
        		String name = "Matthew";
                int rows = 9;
                for(int i = 1; i <= rows; ++i){
                        for(int j = 1; j<= i; ++j){
                        System.out.print("* \t");
                        }
                        if(i==5){
                        System.out.print("This is "+name+"'s Modern Art");
                       }
                       System.out.println();
                }
                }
}
